<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="dbdesigns.com.stormy.ui.AboutActivity"
                android:background="#f92156">

    <TextView
        android:text="Cloudy With a Chance of Meatballs!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CloudyWithAChanceOfMeatballs"
        android:textSize="18sp"
        android:textColor="#ffffffff"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi!"
        android:id="@+id/Hi"
        android:layout_below="@+id/CloudyWithAChanceOfMeatballs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textColor="#ffffffff"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;Stormy&quot;"
        android:id="@+id/StormyTextAbout"
        android:layout_below="@+id/Hi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:textColor="#ffffffff"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="is an application build for those who like a simple weather application that uses a minimal approach and a flat design but doesn&apos;t cut back on the necessary details needed for you to get your daily forecast."
        android:id="@+id/AboutText"
        android:layout_below="@+id/Hi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:textColor="#ffffffff"
        android:padding="25sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-------------------------"
        android:id="@+id/underLine"
        android:textColor="#ffffffff"
        android:layout_below="@+id/AboutText"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© 2016 DB Designs. All rights reserved to Dennis B."
        android:id="@+id/copyright"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        />

</RelativeLayout>
